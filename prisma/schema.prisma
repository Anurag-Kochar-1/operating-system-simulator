generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  USER
  GUEST
}

enum Theme {
  DARK
  LIGHT
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  settings   Settings?
  type       UserType     @default(USER)
  StickyNote StickyNote[]
}

model Settings {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  wallpaperId String?
  wallpaper   Wallpaper? @relation(fields: [wallpaperId], references: [id])

  updatedAt DateTime @updatedAt
}

model Wallpaper {
  id               String     @id @default(uuid())
  name             String
  thumbnail        String
  createdAt        DateTime   @default(now())
  Settings         Settings[]
  recommendedTheme Theme      @default(DARK)
}

model StickyNote {
  id              String   @id @default(uuid())
  content         String   @default("Hey there ðŸ‘‹ ")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  backgroundColor String   @default("#fff")
  textColor       String   @default("#000")
}
